@model PhamMinhThong_B3W_A02.Pages.Customers.CustomerPageModel
@{
    Layout = "_Layout";
}
<a asp-page="./Profile">Profile</a>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Renting[0].RentingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Renting[0].TotalPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Renting[0].RentingStatus)
            </th>    
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Renting)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RentingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RentingStatus)
                </td>
                @*<td>
                    <a asp-page="./Details" asp-route-id="@item.Email">Details</a> 
                </td>*@
            </tr>
        }
    </tbody>
</table>
